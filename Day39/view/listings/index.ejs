<% layout('layout/Boilerplate') %>

<body>
  <h2>All listings are showing here!</h2>

  <% for(let listings of allListings){ %>
    <div class="card" style="width: 18rem;">
      <img src="<%= listings.image.url %>" class="card-img-top" alt="listing_image">
      <div class="card-body">
        <p class="card-text"><%= listings.title %></p> <br>
        <p>â‚¹ <%= listings.price ? listings.price.toLocaleString("en-IN") : "N/A" %></p>
      </div>
    </div>
    <br>
  <% } %>

  <ol>
    <% for(let listings of allListings){ %>
      <li> 
        <a href="/listings/<%= listings._id %>"><%= listings.title %></a>
      </li>
    <% } %>
  </ol>
</body>
