<% if (success && success.length) { %>
  <div 
    class="alert alert-success alert-dismissible fade show mx-auto text-center shadow-sm" 
    style="max-width: 400px; margin-top: 15px;" 
    role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div 
    class="alert alert-danger alert-dismissible fade show mx-auto text-center shadow-sm" 
    style="max-width: 400px; margin-top: 15px;" 
    role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>